@model List<Pingvalue.Models.DeviceGroup>

@{
    Layout = null;
}

@for (int i = 0; i < Model.Count(); i++)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="@Model[i].GroupName-@i" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-fw fa-chart-area"></i>
            <span class="nav-link-text">@Model[i].GroupName</span>
        </a>
        <div class="dropdown-menu" labelledby="@Model[i].GroupName-@i">
            @foreach (var Device in Model[i].Devices.OrderBy(c => c.DeviceName))
            {
                <a class="dropdown-item" href="@Url.Action("Details","Devices", new { id = Device.Id})">@Device.DeviceName</a>
            }
        </div>
    </li>
}