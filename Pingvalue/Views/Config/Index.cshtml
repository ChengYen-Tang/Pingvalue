@model Pingvalue.Models.ConfigViewModels

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            @Html.ActionLink("組態設定", "Index")
        </li>
        <li class="breadcrumb-item active">@ViewContext.RouteData.Values["action"]</li>
    </ol>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>組態設定</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(m => m.LineToken, new { @class = "col-md-6 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LineToken, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LineGroupToken, new { @class = "col-md-6 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LineGroupToken, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LineRetornMessage, new { @class = "col-md-6 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LineRetornMessage, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
</div>

@section css
{
    @Styles.Render("~/Content/Site")
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
