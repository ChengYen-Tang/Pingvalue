@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <li class="nav-item">
            <form class="form-inline my-2 my-lg-0 mr-lg-2">
                @Html.ActionLink("Hello " + User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class="nav-link" })
            </form>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                <i class="fa fa-fw fa-sign-out"></i>Logout
            </a>
        </li>
    }
}
else
{
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Login", "Account")">
            <i class="fa fa-fw fa-sign-in"></i>登入
        </a>
    </li>
}
