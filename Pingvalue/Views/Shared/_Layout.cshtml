<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pingvalue</title>
    <link href="~/Content/font-awesome/css/all.min.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", required: false)

</head>

<body id="page-top">
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top" id="mainNav">
            @Html.ActionLink("Pingvalue", "Index", "Home", new { area = "" }, new { @class = "navbar-brand mr-1" })
            <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
                <i class="fas fa-bars"></i>
            </button>
            <ul class="navbar-nav ml-auto navbar-right">
                @Html.Partial("_LoginPartial")
            </ul>
        </nav>
        <div id="wrapper">
            <ul class="sidebar navbar-nav" id="exampleAccordion">
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Account">
                    <a class="nav-link" href="@Url.Action("Index","SpeedTests")">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span class="nav-link-text">網路測速</span>
                    </a>
                </li>
                @Html.Action("Menu", "Home")
                @if (Request.IsAuthenticated)
                {
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Account">
                        <a class="nav-link" href="@Url.Action("Index","Config")">
                            <i class="fa fa-fw fa-wrench"></i>
                            <span class="nav-link-text">組態設定</span>
                        </a>
                    </li>
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Account">
                        <a class="nav-link" href="@Url.Action("Index","DeviceGroups")">
                            <i class="fa fa-object-group"></i>
                            <span class="nav-link-text">群組管理</span>
                        </a>
                    </li>
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Account">
                        <a class="nav-link" href="@Url.Action("Index","Devices")">
                            <i class="fa fa-desktop"></i>
                            <span class="nav-link-text">設備管理</span>
                        </a>
                    </li>
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Account">
                        <a class="nav-link" href="@Url.Action("Index","UsersAdmin")">
                            <i class="fa fa-users"></i>
                            <span class="nav-link-text">帳戶管理</span>
                        </a>
                    </li>
                }
            </ul>
            <div id="content-wrapper">
                <div container-fluid>
                    @RenderBody()
                </div>
            </div>
            <!-- /.content-wrapper-->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <small>Copyright © 2018 by Cheng-Yen Tang. All rights reserved.</small>
                    </div>
                </div>
            </footer>
            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fa fa-angle-up"></i>
            </a>
        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sb-admin")
    @RenderSection("scripts", required: false)
</body>
</html>
